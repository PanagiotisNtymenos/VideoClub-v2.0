@{
    ViewData["ApplicationName"] = "VideoClub";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @ViewData["ApplicationName"]</title>
    @*<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.13.3/css/selectize.bootstrap4.css">*@
    @*<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">*@
    <link rel="stylesheet" type="text/css" href="~/Content/selectize.css">
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/omdb-api.js"></script>
    @Styles.Render("~/Content/css")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark  fixed-top bg-dark ">

        <div class="container">
            @Html.ActionLink("VideoClub", "index", "movies", new { area = "movies" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                @Html.Partial("_AdminMenuPartial")

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content" style="padding:65px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @ViewData["ApplicationName"]</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.structure.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.13.3/js/standalone/selectize.js"></script>
    <script type="text/javascript">

                $(function () {
                    $("#movieSearch").autocomplete({
                        source: '@Url.Action("MoviesAutoComplete", "rentings")',
                        select: function (event, ui) {
                            $('#movieId').val(ui.item.movieId);
                        }
                    });
                });

                $(function () {
                    $("#movieTitle").autocomplete({
                        source: '@Url.Action("MoviesAutoComplete", "movies")',
                        select: function (event, ui) {
                            $('#movieId').val(ui.item.movieId);
                        }
                    });
                });

                $(function () {
                    $("#userSearch").autocomplete({
                        source: '@Url.Action("UsersAutoComplete", "rentings")'
                    });
                });

                $(document).ready(function () {
                    $('#genresDropDown').selectize({
                        maxItems: 5
                    });

                });

                
    </script>
</body>
</html>

