@using PagedList;
@using PagedList.Mvc;

@model IPagedList<VideoClub.Core.Entities.Renting>
@{
    ViewBag.Title = "Κρατήσεις";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<h2>@ViewBag.Title: <span class="ui-icon-link text-muted">@ViewBag.Customer</span></h2>

<table class="table">
    @if (Model.Count() > 0)
    {
        <thead>
            <tr>
                <th></th>
                <th>Τίτλος</th>
                <th style="text-align:center">ID Κόπιας</th>
                <th style="text-align:center">Ημ. Επιστροφής</th>
                <th style="text-align:center">Κατάσταση</th>
                <th>Σχόλια Κρ.</th>
                <th>Σχόλια Επ.</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
    }
    <tbody>
        @foreach (var item in Model)
        {

            <tr class="table-default">
                <td>
                    <img id="@item.Id" src="~/Content/images/loading.gif" alt="Artwork" style="height:50px;width:auto" />
                    <script>callOMDbAPI('@item.Id','@item.Copy.Movie.Title')</script>
                </td>
                <td>
                    @Html.DisplayFor(m => item.Copy.Movie.Title)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(m => item.Copy.Id)
                </td>
                <td style="text-align:center">
                    @if (DateTime.Compare(item.ScheduledReturnDate, DateTime.Now) < 0 && item.IsActive)
                    {
                        <div style="color:red">
                            @Html.DisplayFor(m => item.ReturnDate)
                        </div>
                    }
                    else
                    {
                        <div style="color:green">
                            @Html.DisplayFor(m => item.ReturnDate)
                        </div>
                    }

                </td>
                <td style="text-align:center">
                    @if (!item.IsActive)
                    {
                        <div style="color:red">
                            Μη Ενεργή
                        </div>
                    }
                    else
                    {
                        <div style="color:green">
                            Ενεργή
                        </div>
                    }
                </td>
                <td>
                    @Html.DisplayFor(m => item.RentingNotes)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ReturnNotes)
                </td>
                @if (item.IsActive)
                {
                    <td>
                        <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("return", "rentings", new { area="rentings", rentingId = item.Id })'"><</button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("return", "rentings", new { area="rentings", rentingId = item.Id })'">x</button>
                    </td>
                }
            </tr>

        }
    </tbody>
</table>

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("rentings", new { page, customer = ViewBag.Customer }))

